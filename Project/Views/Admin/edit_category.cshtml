@{
    ViewBag.Title = "adminindex";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">

        <ol class="breadcrumb">
            <li><a href="@Url.Action("adminindex","Admin")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <style>
                .row {
                    width: 1000px;
                }
            </style>
            <!-- Left col -->
            <section class="col-lg-7 connectedSortable">
                
                    
                <!-- quick email widget -->
                @using Project.EDM;
                @using (Html.BeginForm("edit_category", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    var item = ViewData["cat1"] as tblCategory;

                    <div class="form-group">
                        <label for="exampleInputEmail1">Category Name</label>
                        <input type="text" class="form-control" name="c_name" id="exampleInputEmail1" placeholder="Category Name" value="@item.category_name">
                        <input type="hidden" name="c_id" value="@item.c_id" />
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Category Image</label>
                        <input type="file" class="form-control" name="c_img"  value="@item.category_image" >
                        <a href="~/catimg/@item.category_image">@item.category_image</a>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Category Code</label>
                        <input type="text" class="form-control" name="c_code" id="exampleInputEmail1" placeholder="Category Code" value="@item.category_code">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Category Price</label>
                        <input type="text" class="form-control" name="c_price" id="exampleInputEmail1" placeholder="Price  " value="@item.category_price">
                    </div>




                    <button type="submit" class="btn btn-default">Submit</button>


                }


               
               
            </section>

        </div>
        <!-- /.row (main row) -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
