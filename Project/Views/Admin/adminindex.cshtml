@{
    ViewBag.Title = "adminindex";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="wrapper">



    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Dashboard
                <small>Control panel</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Dashboard</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <!-- Small boxes (Stat box) -->
            <div class="row">
               
                <!-- ./col -->
                <div class="col-lg-3 col-xs-6">
                    <!-- small box -->
                    <div class="small-box bg-green">
                        <div class="inner">
                            <h3>@ViewData["p2"]</h3>
                            <p>Restaurant Registration</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-stats-bars"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-xs-6">
                    <!-- small box -->
                    <div class="small-box bg-yellow">
                        <div class="inner">
                            <h3>@ViewData["p"]</h3>
                            <p>User Registrations</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-person-add"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-xs-6">
                    <!-- small box -->
                    <div class="small-box bg-red">
                        <div class="inner">
                            <h3>65</h3>
                            <p>Unique Visitors</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-pie-graph"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
            </div>
            <!-- Main content -->
            <section class="content">
                <!-- Small boxes (Stat box) -->
                <!-- /.row -->
                <!-- Main row -->
                <div class="row">
                    <style>
                        .row {
                            width: 1000px;
                        }
                    </style>
                    <!-- Left col -->
                    <section class="col-lg-7 connectedSortable">

                        <!-- quick email widget -->
                        <div class="box box-info">
                            <div class="box-header">
                                <i class="fa fa-envelope"></i>
                                <h3 class="box-title">Quick Peek</h3>

                            </div>

                            <style>
                                .quickpick {
                                }

                                    .quickpick h4 {
                                        margin-left: 20px;
                                    }
                            </style>
                            <style>
                                .quickpicktbl {
                                    border-style: groove;
                                    width: 500px;
                                    height: 250px;
                                    margin-left: 10px;
                                }

                                    .quickpicktbl h4 {
                                        margin-top: 20px;
                                    }
                            </style>

                            <div class="quickpick">
                                <h4><b>Welcome Administrator ! </b></h4>
                            </div>

                            <div class="quickpicktbl">
                                <center><h4><b>Logged in as  :  Administrator</h4></b></center>
                                <center><h4><b>
    Today's date  :@Html.Label(string.Format("{0:dd/MM/yyyy}", System.DateTime.Now))
    
</h4></b></center>
                                <center><h4><b>Login Time  :@Html.Label(string.Format("{0}", System.DateTime.Now.ToShortTimeString()))</h4></b></center>


                            </div>


                            <div class="box-footer clearfix">


                                @* <i class="fa fa-arrow-circle-right"></i>*@

                            </div>
                        </div>
                    </section>

                </div>
                <!-- /.row (main row) -->
            </section>
            <!-- /.content -->
            <!-- /.row -->
            <!--blank section-->


        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->



</div>
