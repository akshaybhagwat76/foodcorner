@{
    ViewBag.Title = "search";
    Layout = "~/Views/Shared/Homepage.cshtml";
}
<script>
    $(document).ready(function () {


        var url = window.location.href;

        var sps = url.split("/");
        var cnt = sps.length;
        var sp = url.substring(url.length, url.length - 1);

        var ll = sps[cnt - 1];
        var srch = ll.toLocaleUpperCase();
        //alert(srch);

        $("#main #child #c1 h4").each(function () {


            var s = $(this).text().toLocaleUpperCase();
            //alert(s);
            if (s.indexOf(srch) != -1) {
                // alert(s);
                //alert("show start");
                $(this).parent().parent().parent().show();
                //alert("show");
            }
            else {
                //alert("hide start");
                $(this).parent().parent().parent().hide();
                //alert("hide");
            }

        });
    });
</script>



