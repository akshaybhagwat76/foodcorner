@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Rest.cshtml";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dashboard<br />
            <small>Profile Details</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <style>
                .row {
                    width: 1000px;
                }
            </style>
            <!-- Left col -->
            <section class="col-lg-7 connectedSortable">

                <!-- quick email widget -->
                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-envelope"></i>
                        <h3 class="box-title">Quick Peek</h3>

                    </div>

                    <style>
                        .quickpick {
                        }

                            .quickpick h4 {
                                margin-left: 20px;
                            }
                    </style>
                    <style>
                        .quickpicktbl {
                            border-style: groove;
                            width: 500px;
                            height: 250px;
                            margin-left: 10px;
                        }

                            .quickpicktbl h4 {
                                margin-top: 20px;
                            }
                    </style>

                    <div class="quickpick">
                        <h4><b>Welcome Restuarant ! </b></h4>
                    </div>

                    <div class="quickpicktbl">
                        <center><h4><b>Logged in as  :  Restuarant</h4></b></center>
                        <center><h4><b>Today's date  :  -----------------</h4></b></center>
                        <center><h4><b>Login Time  :  -----------------</h4></b></center>
                        <br />
                        <br />
                        <br />
                        <a href=@Url.Action("viewpro","Rest") style="margin-left:50px;" class="btn btn-primary">View Profile</a>
                        <a href=@Url.Action("editpro","Rest") value="Update Profile" style="margin-left:50px;" class="btn btn-warning">Update Profile</a>
                        <a href="@Url.Action("logoff","Rest") value="log out" style="margin-left:50px;" class="btn btn-danger"> Log Out</a>


                    </div>

                    <div class="box-footer clearfix">

                    </div>
                </div>
            </section>

        </div>
        <!-- /.row (main row) -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
