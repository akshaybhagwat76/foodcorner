@{
    ViewBag.Title = "oldorders";
    Layout = "~/Views/Shared/Rest.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">

        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","Rest")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <style>
                .row {
                    width: 1000px;
                }
            </style>
            <!-- Left col -->
            <section class="col-lg-7 connectedSortable">

                <!-- quick email widget -->
                @using Project.EDM

                @{
                    ViewBag.Title = "";
                }

                <!--banner-->
                <div class="banner">
                    @*<h2>
                            <a href="@Url.Action("Index","Rest")">Details of foods</a>

                        </h2>*@
                </div>
                <!--//banner-->
                <!--banner-->
                <div class="banner">
                </div>
                <!--//banner-->
                <center>
                    <center><h2>Old Orders</h2></center>
                    <table class="table">

                        <thead>
                            <tr>

                                <th>Order ID</th>
                                <th>User Name</th>
                                <th>Quantity</th>
                                <th>Order Date</th>
                                <th>Delivery Time</th>
                                <th>Status</th>

                            </tr>
                        </thead>

                        @foreach (var item in ViewData["ord"] as List<Project.Controllers.oldorders>)
                        {

                            <tr>
                                <th scope="row">@item.cart_id</th>
                                <th>@item.username</th>
                                <th>@item.quantity</th>
                                <th>@item.deliverytime</th>
                                <th>@item.status</th>
                                
                                <th></th>
                                <th></th>


                                <th>@Html.ActionLink("Edit", "editfood", new { id = item.f_id })</th>
                                <th>@Html.ActionLink("Delete", "deletefood", new { id = item.f_id })</th>
                                <th>@Html.ActionLink("Details", "detailfood", new { id = item.f_id })</th>
                                <br />
                                <br />


                            </tr>



                        }

                    </table>


                </center>
            </section>

        </div>
    </section>

</div>
<!-- /.row (main row) -->
<!-- /.content -->
<!-- /.content-wrapper -->
