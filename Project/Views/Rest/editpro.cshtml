@model Project.EDM.tblRestuarantRegistration

@{
    ViewBag.Title = "editpro";
    Layout = "~/Views/Shared/Rest.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">

        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","Rest")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <style>
                .row {
                    width: 1000px;
                }
            </style>
            <!-- Left col -->
            @{var item = ViewData["editpro"] as Project.EDM.tblRestuarantRegistration;}
            @using (Html.BeginForm("editproo", "Rest", FormMethod.Post, new { id = item.r_id})) { 
                
            <section class="col-lg-7 connectedSortable">
                <div class="table-responsive">
                    <table class="table">

                        <tr>
                            <th style="color:cornflowerblue;" colspan="3"><h3>----Restuarant Details----</h3></th>
                        </tr>
                       


                        <tr>

                            <td colspan="3">

                                <img src="~/Images/@item.rest_image" style="height:100px;width:100px;">
                                <a href="@Url.Action("Changimg","Hospital", new { id = item.r_id, v = item.rest_image, id2 = item.r_id})">
                                    change profile picture
                                </a>
                            </td>

                        </tr>
                        <tr>
                            <th>Name</th>
                            <td><input type="text" value="@item.r_name" name="t1" /></td>
                            <td><input type="hidden" name="h1" value="@item.r_id" /></td>
                        </tr>
                        <tr>
                            <th>Mobile Number</th>
                            <td>
                                <input type="text" value="@item.r_mobileno" name="t2" />
                            </td>
                            
                        </tr>
                        <tr>
                            <th>Email ID</th>
                            <td colspan="2">
                                <input type="text" value="@item.r_emailid" name="t3" />
                            </td>

                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>
                                <input type="text" value="@item.r_address" name="t4" />
                            </td>
                           
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td colspan="2">
                                <input type="text" value="@item.r_description" name="t5" />
                            </td>

                        </tr>

                        <td><input type="submit" value="Edit" style="margin-left:50px;" class="btn btn-dropbox" /> </td>
                        <td><a href=@Url.Action("Index","Rest") style="margin-left:50px;" class="btn btn-dropbox">Go Back</a></td>
                    </table>
                </div>

            </section>
            }

        </div>
        <!-- /.row (main row) -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
