                            <td class="invert">
                                <div class="quantity">
                                    <div class="quantity-select">
                                        @*<div class="entry value-minus">&nbsp;</div>*@

                                        @*<div class="entry value">
                                        *@

                                        <span><input type="number" class="entry" min="1"  name="txtqty@(i)" id="txtqty@(i)" value="1" size="5" /></span>

