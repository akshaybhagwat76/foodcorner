@{
    ViewBag.Title = "viewcart";
    Layout = "~/Views/Shared/User.cshtml";
}
@using Project.EDM;
<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script>


    $(document).ready(function () {

        var c = "";



        $(document).on('change', 'input', function () {
            var t = $(this).attr("id");
            var gt = 0;

            // alert(t);
            var qty = $("#" + t).val();
            // alert(qty);
            var lastChar = t.substr(t.length - 1);
            var pric = "oprice" + lastChar;
            // alert(pric);
            var price = $("#" + pric).val();
            // alert(price);
            var tot = "total" + lastChar;
            //   alert(tot);
            // alert(price * qty);

            var gt2 = $('#gtot').val();

            gt2 = gt2 - $("#" + tot).val();

            $("#" + tot).val(price * qty);
            gt2 = gt2 + parseInt($("#" + tot).val());

            $("#gtot").val(gt2);

            var cc = $("#cnt").val();
            gt = 0;
            for (var i = 0; i < cc; i++) {


                var tot = "total" + i;
                var temp = $("#" + total).val();

                alert(temp);
                gt = gt + parseInt(temp);

            }
            // alert(gt);

            //alert(gt);
            $("#gtot").val(gt);

        });


        $("#txtqty").change(function () {

            var price = $("#oprice").val();
            var qty = $("#txtqty").val();
            alert(price * qty);

            $("#total").val(price * qty);
        });

    });
</script>
@using (Html.BeginForm("viewcart", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <!-- check out -->
    <div class="checkout">
        <div class="container">
            @{
    int i = 0;
    int total = 0;
    var cnt = ViewData["viewcart"] as List<Project.Controllers.UserController.cartdetail>;

            }
            <h3>My Shopping Bag</h3>
            <div class="table-responsive checkout-right animated wow slideInUp" data-wow-delay=".5s">
                <table class="timetable_sub">
                    <thead>
                        <tr>
                            <th>Remove</th>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <input type="hidden" id="cnt" name="record_cnt" value="@cnt.Count" />

                    @foreach (var item in ViewData["viewcart"] as List<Project.Controllers.UserController.cartdetail>)
                    {
                        <input type="hidden" name="rid@(i)" value="@item.rid">
