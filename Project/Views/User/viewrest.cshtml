@{
    ViewBag.Title = "viewrest";
    Layout = "~/Views/Shared/User.cshtml";
}
<div class="product-easy">
    <div class="container">

        <script src='@Url.Content("~/js/easyResponsiveTabs.js")' type="text/javascript"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('#horizontalTab').easyResponsiveTabs({
                    type: 'default', //Types: default, vertical, accordion
                    width: 'auto', //auto or any width like 600px
                    fit: true   // 100% fit in a container
                });
            });

        </script>
        <div class="sap_tabs">
            <div id="horizontalTab" style="display: block; width: 100%; margin: 0px;">
                <ul class="resp-tabs-list">
                    <li class="resp-tab-item" aria-controls="tab_item-0" role="tab"><span>ALL RETAURENT</span></li>

                </ul>

                @*//Food Product//*@
    
                <div class="resp-tabs-container">
                    <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-0">
                        @foreach (var item in ViewData["p"] as List<Project.EDM.tblRestuarantRegistration>)
                        {
                            <div class="col-md-3 product-men">
                                <div class="men-pro-item simpleCart_shelfItem">
                                    <div class="men-thumb-item">
                                        <img src="~/rest_img/@item.rest_image" alt=" " class=" pro-image-front" height="220px">

                                        <div class="men-cart-pro">

                                            <div class="inner-men-cart-pro">
                                                <a href='@Url.Action("readrest", "User", new { id = item.r_id })' class="link-product-add-cart">READ MORE</a>
                                            </div>
                                        </div>
                                        @*<span class="product-new-top">New</span>*@

                                    </div>
                                    <div class="item-info-product ">
                                        <h4><font color="orange" size="+3">@item.r_name</font></h4>
                                        <div class="info-product-price">
                                            <span class="item_price"><font color="orange">@item.r_emailid</font></span>

                                        </div>
                                        @*<div class="mid-text">
                                                <a href='@Url.Action("single", "User", new { id = item.c_id })' class="hvr-outline-out button2">BUY NOW</a>

                                            </div>*@
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="clearfix"></div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
